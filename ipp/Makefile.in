include @MAKEDEFS@

#
# Object files...
#

LIBOBJS	=	http.o http-addr.o ipp.o md5.o md5passwd.o snprintf.o \
		string.o
OBJS	=	$(LIBOBJS) testhttp.o


#
# Header files to install...
#

HEADERS	=	http.h ipp.h md5.h


#
# Source distribution definitions...
#

SRCDIR	=	ipp-@CUPS_VERSION@
SRCDIST	=	ipp-@CUPS_VERSION@-source.tar.gz


#
# Targets in this directory...
#

TARGETS	=	$(LIBIPP) libipp.a


#
# Make all targets...
#

all:	$(TARGETS)


#
# Remove object and target files...
#

clean:
	$(RM) $(OBJS) $(TARGETS) `basename $(LIBIPP) .3`


#
# Update dependencies (without system header dependencies...)
#

depend:
	makedepend -Y -I.. -fDependencies $(OBJS:.o=.c) >/dev/null 2>&1


#
# Install object and target files...
#

install:	all	installhdrs
	$(INSTALL_DIR) $(LIBDIR)
	$(INSTALL_LIB) $(LIBIPP) $(LIBDIR)
	if test $(LIBIPP) = "libipp.so.3" -o $(LIBIPP) = "libipp.sl.3"; then \
		$(INSTALL_LIB) libipp.a $(LIBDIR); \
		$(RM) $(LIBDIR)/`basename $(LIBIPP) .3`; \
		$(LN) $(LIBIPP) $(LIBDIR)/`basename $(LIBIPP) .3`; \
	fi
	if test $(LIBIPP) = "libipp.3.dylib"; then \
		$(STRIP) -x $(LIBDIR)/$(LIBIPP); \
		$(INSTALL_LIB) libipp.a $(LIBDIR); \
		$(RM) $(LIBDIR)/libipp.dylib; \
		$(LN) $(LIBIPP) $(LIBDIR)/libipp.dylib; \
	fi
	if test $(LIBIPP) = "libipp_s.a"; then \
		$(INSTALL_LIB) libipp.a $(LIBDIR); \
	fi

installhdrs:
	$(INSTALL_DIR) $(INCLUDEDIR)/ipp
	for file in $(HEADERS); do \
		$(INSTALL_DATA) $$file $(INCLUDEDIR)/ipp; \
	done


#
# libipp.so.3, libipp.sl.3
#

libipp.so.3 libipp.sl.3:	$(LIBOBJS)
	echo Linking $@...
	$(DSO) $(DSOFLAGS) -o $@ $(LIBOBJS) $(SSLLIBS)
	$(RM) `basename $@ .3`
	$(LN) $@ `basename $@ .3`


#
# libipp.2.dylib
#

libipp.3.dylib:	$(LIBOBJS)
	echo Linking $@...
	$(DSO) $(DSOFLAGS) -o $@ \
		-install_name $(libdir)/libipp.dylib \
		-current_version 3.0.0 \
		-compatibility_version 3.0.0 \
		$(LIBOBJS) $(SSLLIBS)
	$(RM) libipp.dylib
	$(LN) $@ libipp.dylib


#
# libipp_s.a
#

libipp_s.a:	$(LIBOBJS)
	echo Creating $@...
	$(RM) libipp_s.exp
	(echo _ipp_add_attr; echo _ipp_free_attr) >libipp_s.exp
	$(DSO) $(DSOFLAGS) -Wl,-bexport:libipp_s.exp -o libipp_s.o $(LIBOBJS) $(SSLLIBS) -lm
	$(RM) $@
	$(AR) $(ARFLAGS) $@ libipp_s.o


#
# libipp.la
#

libipp.la:    $(LIBOBJS)
	echo Linking $@...
	$(CC) $(LDFLAGS) -o $@ $(LIBOBJS:.o=.lo) -rpath $(LIBDIR) \
		-version-info 3:0 $(SSLLIBS)


#
# libipp.a
#

libipp.a:	$(LIBOBJS)
	echo Archiving $@...
	$(RM) $@
	$(AR) $(ARFLAGS) $@ $(LIBOBJS)
	$(RANLIB) $@


#
# testhttp (dependency on static IPP library is intentional)
#

testhttp:	testhttp.o libipp.a
	echo Linking $@...
	$(CC) $(LDFLAGS) -o $@ testhttp.o libipp.a $(NETLIBS) $(SSLLIBS)


#
# Make a source distribution...
#

srcdist:
	echo Making source distribution file $(SRCDIST)...
	$(RM) -rf $(SRCDIR) $(SRCDIST)
	mkdir $(SRCDIR)
	autoconf -f
	cp configure $(SRCDIR)
	cp Dependencies.dist $(SRCDIR)/Dependencies
	cp *.c *.h *.in *.spec *.txt $(SRCDIR)
	cp ../LICENSE.txt ../LICENSE.html $(SRCDIR)
	tar cvzf $(SRCDIST) $(SRCDIR)


#
# Make software distributions using EPM (http://www.easysw.com/epm/)...
#

EPMFLAGS	=	-v

aix:
	epm $(EPMFLAGS) -f aix ipp

bsd:
	epm $(EPMFLAGS) -f bsd ipp

epm:
	epm $(EPMFLAGS) ipp

rpm:
	epm $(EPMFLAGS) -f rpm ipp

deb:
	epm $(EPMFLAGS) -f deb ipp

depot:
	epm $(EPMFLAGS) -f depot ipp

pkg:
	epm $(EPMFLAGS) -f pkg ipp

tardist:
	epm $(EPMFLAGS) -f tardist ipp


#
# Dependencies...
#
  
include Dependencies


