#
# Programs...
#

AR	=	@AR@
AWK	=	@AWK@
CC	=	@CC@
CHMOD	=	@CHMOD@
CP	=	@CP@
HTMLDOC	=	@HTMLDOC@
LN	=	/bin/ln -sf
MKDIR	=	@MKDIR@ -p
NROFF	=	@NROFF@
PACK	=	@PACK@
RANLIB	=	@RANLIB@
RM	=	@RM@ -f
SED	=	@SED@
SHELL	=	/bin/sh
SMBCLIENT =	@SMBCLIENT@

#
# Program options...
#
# OPTIM   defines the common compiler optimization/debugging options.
# OPTIONS defines other compile-time options (currently only -dDEBUG for
#         extra debug info)
#

ARFLAGS	=	crvs
CFLAGS	=	@CFLAGS@ $(OPTIM) -I.. $(OPTIONS)
IMGLIBS	=	@IMGLIBS@ $(LIBS) -lm
LDFLAGS	=	@LDFLAGS@ $(OPTIM)
LIBS	=	@LIBS@ -L../cups -lcups
OPTIM	=	@OPTIM@
OPTIONS	=

#
# Formatted man page extension...
#

CAT	=	@CAT@

#
# Directories...
#
# The first section uses the GNU names (which are *extremely*
# difficult to find in a makefile because they are lowercase...)
# We have to define these first because autoconf uses ${prefix}
# and ${exec_prefix} for most of the other directories...
#
# This is immediately followed by definition in ALL CAPS for the
# needed directories...
#

bindir		=	@bindir@
datadir		=	@datadir@
exec_prefix	=	@exec_prefix@
includedir	=	@includedir@
infodir		=	@infodir@
libdir		=	@libdir@
libexecdir	=	@libexecdir@
localstatedir	=	@localstatedir@
mandir		=	@mandir@
oldincludedir	=	@oldincludedir@
prefix		=	@prefix@
sbindir		=	@sbindir@
sharedstatedir	=	@sharedstatedir@
srcdir		=	@srcdir@
sysconfdir	=	@sysconfdir@
top_srcdir	=	@top_srcdir@

BINDIR		=	@bindir@
DATADIR		=	@CUPS_DATADIR@
INCLUDEDIR	=	$(includedir)/cups
LIBDIR		=	$(libdir)
LOCALEDIR	= 	@CUPS_LOCALEDIR@
MANDIR		=	@mandir@
SBINDIR		=	@sbindir@
SERVERROOT	= 	@CUPS_SERVERROOT@

#
# Rules...
#

.SUFFIXES:	.a .c .h .1 .2 .3 .4 .5 .6 .7 .8 .o .$(CAT)
.c.o:
	$(CC) $(CFLAGS) -c $<
.1.$(CAT) .2.$(CAT) .3.$(CAT) .4.$(CAT) .5.$(CAT) .6.$(CAT) .7.$(CAT) .8.$(CAT):
	$(NROFF) -man $< >t
	$(PACK) t
	-mv t.$(CAT) $@

